<Window x:Class="CarRent.CarDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRent"
        mc:Ignorable="d"
        Title="Car Details" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Brand:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding Brand}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Model:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding Model}" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Year:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding Year}" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="License Plate:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding LicensePlate}" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Type:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding Type}" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Status:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding Status}" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Price per Day:" Grid.Row="6" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="{Binding PricePerDay}" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Image:" Grid.Row="7" Grid.Column="0" FontWeight="Bold" Margin="5"/>
        <Image Source="{Binding ImagePath}" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Height="100" Stretch="Uniform" Margin="5"/>
    </Grid>
</Window>